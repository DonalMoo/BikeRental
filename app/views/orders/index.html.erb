<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Bike</th>
      <th>Price</th>
      <th>Days</th>
      <th>Total</th>
      <th>Bike</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.bike %></td>
        <td><%= order.price %></td>
        <td><%= order.days %></td>
        <td><%= order.total %></td>
        <td><%= order.bike_id %></td>
        <td><%= order.profile %></td>
        <td><%= link_to 'Show', profile_order %></td>
        <td><%= link_to 'Edit', edit_profile_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

