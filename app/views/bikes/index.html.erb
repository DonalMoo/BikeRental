<p id="notice"><%= notice %></p>

<h1>Listing Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Days</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.description %></td>
        <td><%= bike.price %></td>
        <td><%= bike.days %></td>
        <td><%= image_tag(bike.image_url, :class => 'list_image') %></td>
        <td><%= button_to 'Add to Order', profile_orders_path(Profile.find_by_user_id(current_user.id), bike_id: bike) %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Bike', new_bike_path %>
<% end %>
